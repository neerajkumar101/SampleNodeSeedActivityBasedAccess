        .policy-list {
            font-size: 12px;
            margin-top: 0;
			color: #000;
            border-bottom: 1px solid #ddd;
        }
		
		#imp-terms{
		color: #000;
		}
		
		.booking-list li.row{
			width: 100%;
    		display: inline-flex;
			    padding: 15px 0px;
				color: #000;
		}
		
		.booking-list li.row .col-md-7{
			width: 70%;
			float: left;
		}
		
		.booking-list li.row .col-md-5{
			width: 30%;
			float: right;
		}
        
        @media only screen and (max-width: 640px) {
            body {
                padding: 0 !important;
